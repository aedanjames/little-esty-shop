<center>
<h1>New Discount for <%= @merchant.name  %></h1>

<%= form_with(model: [@merchant, @discount], local: true) do |form| %>
 
    <%= form.label :name %>
    <%= form.text_field :name, value: params[:discount] %>

    <%= form.label :threshold %>
    <%= form.number_field :threshold, min: 1, value: params[:threshold] %>

    <%= form.label :percentage %>
    <%= form.number_field :percentage, min: 1, max: 100, value: params[:percentage] %>

    <%= form.submit %>
<% end %>