
<%= form_for [@merchant, @discount], local: true do |form|%>

<%= form.label :name %>
<%= form.text_field :name %>

<%= form.label :threshold %>
<%= form.number_field :threshold, min: 1 %>

<%= form.label :percentage %>
<%= form.number_field :percentage, min: 1, max: 100 %>

<%= form.submit %>

<% end %>