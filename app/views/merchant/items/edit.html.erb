

<%= form_with url: "/merchants/#{@merchant.id}/items/#{@item.id}", method: :patch, local: true do |form| %>
<p><%= form.label :name %></p>
<p><%= form.text_field :name, :value => "#{@item.name}" %></p> <br>

<p><%= form.label :description %></p>
<p><%= form.text_field :description, :value => "#{@item.description}" %></p><br>

<p><%= form.label :unit_price %></p>
<p><%= form.text_field :unit_price, :value => "#{@item.unit_price}"%></p><br>

<p><%= form.submit 'Submit'%></p>
<%end%>
